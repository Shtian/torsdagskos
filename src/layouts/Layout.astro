---
import "../styles/global.css";
import { clerkClient } from '@clerk/astro/server';
import { SignOutButton } from '@clerk/astro/components';

interface Props {
	title?: string;
}

const { title = "Torsdagskos" } = Astro.props;

// Get authenticated user
const { userId } = Astro.locals.auth();
let user = null;

if (userId) {
	user = await clerkClient(Astro).users.getUser(userId);
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="app-container">
			<header class="app-header">
				<div class="header-content">
					<a href="/" class="app-name">
						<h1>Torsdagskos</h1>
					</a>

					{user && (
						<div class="user-profile">
							<span class="user-name">
								{user.firstName || user.emailAddresses[0]?.emailAddress}
							</span>
							<SignOutButton asChild redirectUrl="/sign-in">
								<button class="sign-out-button">Sign Out</button>
							</SignOutButton>
						</div>
					)}
				</div>
			</header>

			<main class="main-content">
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	.app-container {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.app-header {
		background-color: var(--color-surface);
		border-bottom: 1px solid var(--color-border);
		box-shadow: var(--shadow-sm);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-4);
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: var(--space-4);
	}

	.app-name {
		text-decoration: none;
		color: inherit;
	}

	.app-name h1 {
		margin: 0;
		font-size: 1.5rem;
		font-family: var(--font-heading);
		color: var(--color-accent-dark);
	}

	.user-profile {
		display: flex;
		align-items: center;
		gap: var(--space-3);
		flex-shrink: 0;
	}

	.user-name {
		font-size: 0.875rem;
		color: var(--color-text-secondary);
		display: none;
	}

	.sign-out-button {
		background-color: var(--color-accent);
		color: white;
		border: none;
		padding: var(--space-2) var(--space-4);
		border-radius: var(--radius-md);
		font-size: 0.875rem;
		font-family: var(--font-body);
		cursor: pointer;
		transition: background-color 0.2s;
		white-space: nowrap;
	}

	.sign-out-button:hover {
		background-color: var(--color-accent-dark);
	}

	.sign-out-button:focus {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}

	.main-content {
		flex: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-6) var(--space-4);
		width: 100%;
	}

	/* Mobile-first responsive design */
	/* Show user name on tablet and larger screens */
	@media (min-width: 640px) {
		.user-name {
			display: block;
		}

		.app-name h1 {
			font-size: 1.75rem;
		}
	}

	/* Larger padding on desktop */
	@media (min-width: 1024px) {
		.header-content {
			padding: var(--space-5) var(--space-6);
		}

		.main-content {
			padding: var(--space-8) var(--space-6);
		}

		.app-name h1 {
			font-size: 2rem;
		}
	}
</style>
