---
import '../styles/global.css';
import { clerkClient } from '@clerk/astro/server';
import { Button } from '@/components/ui/button';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Torsdagskos',
  description = 'Torsdagskos er en privat møteplanlegger for å koordinere gjentakende arrangementer med venner.',
} = Astro.props;

// Get authenticated user
const { userId } = Astro.locals.auth();
let user = null;
const shouldRegisterServiceWorker = !!userId;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/events/new', label: '+ Opprett arrangement' },
  { href: '/history', label: 'Min historikk' },
  { href: '/settings', label: 'Innstillinger' },
];

if (userId) {
  user = await clerkClient(Astro).users.getUser(userId);
}
---

<!doctype html>
<html lang="no">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:wght@600;700&family=Manrope:wght@400;500;600;700&display=swap" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
		<div class="flex min-h-screen flex-col">
			<header class="sticky top-0 z-50 border-b bg-background shadow-sm">
				<div class="mx-auto flex w-full max-w-[75rem] flex-col gap-4 p-4 md:flex-row md:items-center md:justify-between lg:px-6 lg:py-5">
					<a href="/" class="no-underline">
						<h1 class="m-0 text-2xl text-foreground sm:text-[1.75rem] lg:text-[2rem]">Torsdagskos</h1>
					</a>

					{user && (
						<div class="w-full md:w-auto">
							<div class="mb-2 text-right">
								<span class="hidden text-sm text-muted-foreground sm:inline">
									{user.firstName || user.emailAddresses[0]?.emailAddress}
								</span>
							</div>
							<div class="flex w-full flex-col gap-3 md:w-auto md:items-end">
								<nav aria-label="Hovednavigasjon" class="w-full md:w-auto">
									<ul class="m-0 grid list-none grid-cols-2 gap-x-4 gap-y-2 p-0 sm:grid-cols-3 md:flex md:flex-wrap md:justify-end md:gap-4">
										{
											navLinks.map((link) => (
												<li>
													<a
														href={link.href}
														aria-current={currentPath === link.href ? 'page' : undefined}
														class:list={[
															'touch-target inline-flex items-center rounded-sm px-1 py-1 text-sm font-semibold text-foreground no-underline underline-offset-4 transition hover:underline focus-visible:underline',
															currentPath === link.href
																? 'underline decoration-2'
																: 'decoration-1',
														]}
													>
														{link.label}
													</a>
												</li>
											))
										}
									</ul>
								</nav>
								<div class="relative md:self-end" data-header-profile-menu>
									<Button
										id="header-profile-trigger"
										type="button"
										size="lg"
										className="touch-target min-w-[9rem] justify-center"
										aria-haspopup="menu"
										aria-expanded="false"
										aria-controls="header-profile-menu"
										data-header-profile-trigger
									>
										Account
									</Button>
									<div
										id="header-profile-menu"
										role="menu"
										aria-labelledby="header-profile-trigger"
										data-header-profile-content
										class="absolute right-0 z-50 mt-2 flex min-w-[11rem] flex-col gap-1 rounded-md border bg-popover p-1 shadow-md"
										hidden
									>
										<a
											href="/profile"
											role="menuitem"
											class="touch-target rounded-sm px-3 py-2 text-sm font-medium text-popover-foreground no-underline transition hover:bg-muted focus-visible:bg-muted"
										>
											Profile
										</a>
										<a
											href="/settings"
											role="menuitem"
											class="touch-target rounded-sm px-3 py-2 text-sm font-medium text-popover-foreground no-underline transition hover:bg-muted focus-visible:bg-muted"
										>
											Settings
										</a>
										<button
											type="button"
											role="menuitem"
											data-header-logout-button
											class="touch-target w-full cursor-pointer rounded-sm px-3 py-2 text-left text-sm font-medium text-popover-foreground transition hover:bg-muted focus-visible:bg-muted"
										>
											Log out
										</button>
									</div>
								</div>
							</div>
						</div>
					)}
					{!user && (
						<div class="w-full md:w-auto md:self-end">
							<a
								href="/sign-in"
								class="touch-target inline-flex items-center rounded-sm px-1 py-1 text-sm font-semibold text-foreground no-underline underline-offset-4 transition hover:underline focus-visible:underline"
							>
								Login
							</a>
						</div>
					)}
				</div>
			</header>

			<main id="main-content" class="mx-auto w-full max-w-[1200px] flex-1 p-4 sm:p-6 lg:p-8">
				<slot />
			</main>
		</div>
		{shouldRegisterServiceWorker && (
			<script>
				if ('serviceWorker' in navigator) {
					navigator.serviceWorker.register('/service-worker.js').catch(() => {
						// Best-effort registration: keep UI functional even if SW setup fails.
					});
				}
			</script>
		)}
		{user && (
			<script>
				const headerMenuRoot = document.querySelector('[data-header-profile-menu]');
				if (headerMenuRoot instanceof HTMLElement) {
					const trigger = headerMenuRoot.querySelector('[data-header-profile-trigger]');
					const menu = headerMenuRoot.querySelector('[data-header-profile-content]');
					const items = () =>
						Array.from(menu?.querySelectorAll<HTMLElement>('[role="menuitem"]') ?? []);

					if (trigger instanceof HTMLButtonElement && menu instanceof HTMLElement) {
						const closeMenu = () => {
							menu.hidden = true;
							trigger.setAttribute('aria-expanded', 'false');
						};

						const openMenu = (focusFirstItem = false) => {
							menu.hidden = false;
							trigger.setAttribute('aria-expanded', 'true');
							if (focusFirstItem) {
								items()[0]?.focus();
							}
						};

						trigger.addEventListener('click', () => {
							if (menu.hidden) {
								openMenu();
								return;
							}
							closeMenu();
						});

						trigger.addEventListener('keydown', (event) => {
							if (event.key === 'ArrowDown') {
								event.preventDefault();
								openMenu(true);
							}
						});

						document.addEventListener('pointerdown', (event) => {
							if (!headerMenuRoot.contains(event.target as Node)) {
								closeMenu();
							}
						});

						document.addEventListener('keydown', (event) => {
							if (event.key === 'Escape' && !menu.hidden) {
								event.preventDefault();
								closeMenu();
								trigger.focus();
							}
						});

						menu.addEventListener('keydown', (event) => {
							if (event.key === 'Escape') {
								event.preventDefault();
								closeMenu();
								trigger.focus();
							}
						});

						const logoutButton = menu.querySelector('[data-header-logout-button]');
						if (logoutButton instanceof HTMLButtonElement) {
							logoutButton.addEventListener('click', () => {
								const cookiePrefixes = [
									'__session',
									'__client_uat',
									'__clerk_db_jwt',
									'clerk_active_context',
								];

								const cookieNames = document.cookie
									.split(';')
									.map((cookie) => cookie.trim().split('=')[0])
									.filter((name) => name.length > 0);

								for (const name of cookieNames) {
									if (cookiePrefixes.some((prefix) => name === prefix || name.startsWith(`${prefix}_`))) {
										document.cookie = `${name}=; Max-Age=0; path=/`;
									}
								}

								window.location.assign('/sign-in');
							});
						}
					}
				}
			</script>
		)}
	</body>
</html>
