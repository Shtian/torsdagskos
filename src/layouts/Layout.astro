---
import "../styles/global.css";
import { clerkClient } from '@clerk/astro/server';
import { SignOutButton } from '@clerk/astro/components';

interface Props {
	title?: string;
}

const { title = "Torsdagskos" } = Astro.props;

// Get authenticated user
const { userId } = Astro.locals.auth();
let user = null;

if (userId) {
	user = await clerkClient(Astro).users.getUser(userId);
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="flex min-h-screen flex-col">
			<header class="sticky top-0 z-50 border-b border-(--color-border) bg-white shadow-sm">
				<div class="mx-auto flex w-full max-w-300 items-center justify-between gap-4 p-4 lg:px-6 lg:py-5">
					<a href="/" class="no-underline">
						<h1 class="m-0 text-2xl text-(--color-accent-dark) sm:text-[1.75rem] lg:text-[2rem]">Torsdagskos</h1>
					</a>

					{user && (
						<div class="flex shrink-0 items-center gap-4">
							<a href="/events/new" class="inline-block whitespace-nowrap rounded-md bg-(--color-accent) px-4 py-2 text-sm font-medium text-white no-underline transition duration-200 hover:-translate-y-px hover:bg-(--color-accent-dark) focus:outline-2 focus:outline-offset-2 focus:outline-(--color-accent)">+ Create Event</a>
							<a href="/settings" class="inline-block whitespace-nowrap rounded-md border border-(--color-border) bg-white px-4 py-2 text-sm font-medium text-(--color-accent-dark) no-underline transition duration-200 hover:-translate-y-px hover:border-(--color-accent-light) hover:bg-(--color-primary-100) focus:outline-2 focus:outline-offset-2 focus:outline-(--color-accent)">Settings</a>
							<div class="flex shrink-0 items-center gap-3">
								<span class="hidden text-sm text-(--color-text-secondary) sm:block">
									{user.firstName || user.emailAddresses[0]?.emailAddress}
								</span>
								<SignOutButton asChild redirectUrl="/sign-in">
									<button class="whitespace-nowrap rounded-md bg-(--color-accent) px-4 py-2 text-sm text-white transition-colors duration-200 hover:bg-(--color-accent-dark) focus:outline-2 focus:outline-offset-2 focus:outline-(--color-accent)">Sign Out</button>
								</SignOutButton>
							</div>
						</div>
					)}
				</div>
			</header>

			<main class="mx-auto w-full max-w-[1200px] flex-1 p-4 sm:p-6 lg:p-8">
				<slot />
			</main>
		</div>
	</body>
</html>
