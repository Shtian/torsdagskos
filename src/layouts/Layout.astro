---
import '../styles/global.css';
import { clerkClient } from '@clerk/astro/server';
import { SignOutButton } from '@clerk/astro/components';
import { Button } from '@/components/ui/button';
import { buttonVariants } from '@/components/ui/button';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Torsdagskos',
  description = 'Torsdagskos er en privat møteplanlegger for å koordinere gjentakende arrangementer med venner.',
} = Astro.props;

// Get authenticated user
const { userId } = Astro.locals.auth();
let user = null;
const shouldRegisterServiceWorker = !!userId;

if (userId) {
  user = await clerkClient(Astro).users.getUser(userId);
}
---

<!doctype html>
<html lang="no">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:wght@600;700&family=Manrope:wght@400;500;600;700&display=swap" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
		<div class="flex min-h-screen flex-col">
			<header class="sticky top-0 z-50 border-b bg-background shadow-sm">
				<div class="mx-auto flex w-full max-w-[75rem] flex-col gap-4 p-4 md:flex-row md:items-center md:justify-between lg:px-6 lg:py-5">
					<a href="/" class="no-underline">
						<h1 class="m-0 text-2xl text-foreground sm:text-[1.75rem] lg:text-[2rem]">Torsdagskos</h1>
					</a>

					{user && (
						<div class="w-full md:w-auto">
							<div class="mb-2 text-right">
								<span class="hidden text-sm text-muted-foreground sm:inline">
									{user.firstName || user.emailAddresses[0]?.emailAddress}
								</span>
							</div>
							<div class="grid w-full grid-cols-2 gap-2 sm:grid-cols-4 md:flex md:w-auto md:flex-wrap md:justify-end md:gap-3">
								<a href="/events/new" class:list={[buttonVariants({ size: "lg" }), "touch-target no-underline"]}>+ Opprett arrangement</a>
								<a href="/history" class:list={[buttonVariants({ variant: "outline", size: "lg" }), "touch-target no-underline"]}>Min historikk</a>
								<a href="/settings" class:list={[buttonVariants({ variant: "outline", size: "lg" }), "touch-target no-underline"]}>Innstillinger</a>
								<SignOutButton asChild redirectUrl="/sign-in">
									<Button client:load size="lg" className="touch-target">Logg ut</Button>
								</SignOutButton>
							</div>
						</div>
					)}
				</div>
			</header>

			<main id="main-content" class="mx-auto w-full max-w-[1200px] flex-1 p-4 sm:p-6 lg:p-8">
				<slot />
			</main>
		</div>
		{shouldRegisterServiceWorker && (
			<script>
				if ('serviceWorker' in navigator) {
					navigator.serviceWorker.register('/service-worker.js').catch(() => {
						// Best-effort registration: keep UI functional even if SW setup fails.
					});
				}
			</script>
		)}
	</body>
</html>
