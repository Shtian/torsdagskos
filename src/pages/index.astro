---
import Layout from '../layouts/Layout.astro';
import ShadcnIslandDemo from '../components/ShadcnIslandDemo';
import { EventCard } from '../components/EventCard';
import { buttonVariants } from '@/components/ui/button';







import { db, Users, Events, Rsvps, eq } from 'astro:db';
import { clerkClient } from '@clerk/astro/server';

// Get authenticated user
const { userId } = Astro.locals.auth();

let user = null;

// Sync user to local database if not exists
if (userId) {
  user = await clerkClient(Astro).users.getUser(userId);

  const existingUser = await db
    .select()
    .from(Users)
    .where(eq(Users.clerkUserId, userId))
    .get();

  if (!existingUser) {
    try {
      await db.insert(Users).values({
        clerkUserId: userId,
        email: user.emailAddresses[0]?.emailAddress || '',
        name:
          `${user.firstName || ''} ${user.lastName || ''}`.trim() ||
          user.emailAddresses[0]?.emailAddress ||
          'User',
        createdAt: new Date(),
      });
    } catch (error) {
      // Ignore unique constraint errors - user was already created by concurrent request
      if (
        !(error instanceof Error && error.message.includes('UNIQUE constraint'))
      ) {
        throw error;
      }
    }
  }
}

// Fetch all events
const allEvents = await db.select().from(Events).all();

// Get most recent event for duplication (sorted by createdAt descending)
const mostRecentEvent =
  allEvents.length > 0
    ? [...allEvents].sort(
        (a, b) =>
          new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime(),
      )[0]
    : null;

// Get RSVP counts for each event
const eventsWithRsvps = await Promise.all(
  allEvents.map(async (event) => {
    const rsvps = await db
      .select()
      .from(Rsvps)
      .where(eq(Rsvps.eventId, event.id))
      .all();

    const rsvpCounts = { going: 0, maybe: 0, notGoing: 0 };
    for (const rsvp of rsvps) {
      if (rsvp.status === 'going') {
        rsvpCounts.going += 1;
      } else if (rsvp.status === 'maybe') {
        rsvpCounts.maybe += 1;
      } else if (rsvp.status === 'not_going') {
        rsvpCounts.notGoing += 1;
      }
    }

    return {
      ...event,
      rsvpCounts,
    };
  }),
);

// Separate into upcoming and past events (Europe/Oslo timezone)
const now = new Date();
const upcomingEvents = eventsWithRsvps
  .filter((event) => new Date(event.dateTime) >= now)
  .sort(
    (a, b) => new Date(a.dateTime).getTime() - new Date(b.dateTime).getTime(),
  );

const pastEvents = eventsWithRsvps
  .filter((event) => new Date(event.dateTime) < now)
  .sort(
    (a, b) => new Date(b.dateTime).getTime() - new Date(a.dateTime).getTime(),
  );

// Format date in Europe/Oslo timezone
function formatEventDate(date: Date): string {
  return new Intl.DateTimeFormat('no-NO', {
    timeZone: 'Europe/Oslo',
    weekday: 'short',
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(new Date(date));
}
---

<Layout
  title="Arrangementer - Torsdagskos"
  description="Se kommende og tidligere Torsdagskos-arrangementer med sted, tidspunkt og svaroversikt."
>
  <div
    class="mx-auto mt-6 w-full max-w-[75rem] pb-8 sm:mt-10"
    data-test-id="homepage-shell"
  >
    <ShadcnIslandDemo client:load />

    <section class="space-y-4" data-test-id="homepage-upcoming">
      <div data-slot="card" class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm">
        <div
          data-slot="card-header"
          class="grid auto-rows-min gap-4 px-6 sm:grid-cols-[1fr_auto] sm:items-start sm:px-8"
        >
          <div class="space-y-2">
            <h1 class="m-0 text-2xl text-(--color-accent-dark) sm:text-[2rem]">Kommende arrangementer</h1>
            <p data-slot="card-description" class="m-0 text-sm text-muted-foreground">
              Alle kommende arrangementer er sortert etter dato og klokkeslett.
            </p>
          </div>
          <div>
            {mostRecentEvent && (
              <a
                href={`/events/new?duplicate=true&title=${encodeURIComponent(mostRecentEvent.title)}&description=${encodeURIComponent(mostRecentEvent.description || '')}&location=${encodeURIComponent(mostRecentEvent.location)}&mapLink=${encodeURIComponent(mostRecentEvent.mapLink || '')}`}
                data-test-id="duplicate-last-event"
                class:list={[buttonVariants({ variant: 'outline' }), 'w-full no-underline sm:w-auto']}
              >
                Dupliser forrige arrangement
              </a>
            )}
            {!mostRecentEvent && (
              <button
                data-test-id="duplicate-last-event"
                class:list={[buttonVariants({ variant: 'outline' }), 'w-full cursor-not-allowed sm:w-auto']}
                disabled
                aria-label="Duplisering av forrige arrangement er ikke tilgjengelig"
              >
                Dupliser forrige arrangement
              </button>
            )}
          </div>
        </div>

        <div data-slot="card-content" class="px-6 sm:px-8">
          {upcomingEvents.length === 0 && pastEvents.length === 0 && (
            <div
              data-slot="card"
              class="border-border bg-muted/20 rounded-xl border border-dashed p-8 text-center"
              data-test-id="empty-state"
            >
              <p class="m-0 text-muted-foreground">Ingen arrangementer enn√•. Kom tilbake snart!</p>
            </div>
          )}

          {upcomingEvents.length > 0 && (
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
              {upcomingEvents.map(event => (
                <EventCard
                  id={event.id}
                  title={event.title}
                  dateTime={formatEventDate(event.dateTime)}
                  location={event.location}
                  rsvpCounts={event.rsvpCounts}
                />
              ))}
            </div>
          )}
        </div>
      </div>
    </section>

    {pastEvents.length > 0 && (
      <>
        <div data-slot="separator" class="bg-border my-8 h-px w-full" data-test-id="section-separator" />
        <section class="space-y-4" data-test-id="homepage-past">
          <div data-slot="card" class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm">
            <div data-slot="card-header" class="px-6 sm:px-8">
              <h1 class="m-0 text-2xl text-(--color-accent-dark) sm:text-[2rem]">Tidligere arrangementer</h1>
              <p data-slot="card-description" class="mt-2 mb-0 text-sm text-muted-foreground">
                Tidligere arrangementer er sortert fra nyeste til eldste.
              </p>
            </div>
            <div data-slot="card-content" class="px-6 sm:px-8">
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                {pastEvents.map(event => (
                  <EventCard
                    id={event.id}
                    title={event.title}
                    dateTime={formatEventDate(event.dateTime)}
                    location={event.location}
                    rsvpCounts={event.rsvpCounts}
                    isPast={true}
                  />
                ))}
              </div>
            </div>
          </div>
        </section>
      </>
    )}
  </div>
</Layout>
