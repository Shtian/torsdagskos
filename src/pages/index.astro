---
import Layout from '../layouts/Layout.astro';
import { db, Users, Events, Rsvps, eq } from 'astro:db';
import { clerkClient } from '@clerk/astro/server';

// Get authenticated user
const { userId } = Astro.locals.auth();

let user = null;

// Sync user to local database if not exists
if (userId) {
  user = await clerkClient(Astro).users.getUser(userId);

  const existingUser = await db
    .select()
    .from(Users)
    .where(eq(Users.clerkUserId, userId))
    .get();

  if (!existingUser) {
    try {
      await db.insert(Users).values({
        clerkUserId: userId,
        email: user.emailAddresses[0]?.emailAddress || '',
        name: `${user.firstName || ''} ${user.lastName || ''}`.trim() || user.emailAddresses[0]?.emailAddress || 'User',
        createdAt: new Date()
      });
    } catch (error) {
      // Ignore unique constraint errors - user was already created by concurrent request
      if (!(error instanceof Error && error.message.includes('UNIQUE constraint'))) {
        throw error;
      }
    }
  }
}

// Fetch all events
const allEvents = await db.select().from(Events).all();

// Get RSVP counts for each event
const eventsWithRsvps = await Promise.all(
  allEvents.map(async (event) => {
    const rsvps = await db
      .select()
      .from(Rsvps)
      .where(eq(Rsvps.eventId, event.id))
      .all();

    const going = rsvps.filter(r => r.status === 'going').length;
    const maybe = rsvps.filter(r => r.status === 'maybe').length;
    const notGoing = rsvps.filter(r => r.status === 'not_going').length;

    return {
      ...event,
      rsvpCounts: { going, maybe, notGoing }
    };
  })
);

// Separate into upcoming and past events (Europe/Oslo timezone)
const now = new Date();
const upcomingEvents = eventsWithRsvps
  .filter(event => new Date(event.dateTime) >= now)
  .sort((a, b) => new Date(a.dateTime).getTime() - new Date(b.dateTime).getTime());

const pastEvents = eventsWithRsvps
  .filter(event => new Date(event.dateTime) < now)
  .sort((a, b) => new Date(b.dateTime).getTime() - new Date(a.dateTime).getTime());

// Format date in Europe/Oslo timezone
function formatEventDate(date: Date): string {
  return new Intl.DateTimeFormat('no-NO', {
    timeZone: 'Europe/Oslo',
    weekday: 'short',
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
}
---

<Layout>
  <div class="container">
    <h1 class="page-title">Upcoming Events</h1>

    {upcomingEvents.length === 0 && pastEvents.length === 0 && (
      <div class="empty-state">
        <p>No events yet. Check back soon!</p>
      </div>
    )}

    {upcomingEvents.length > 0 && (
      <div class="events-section">
        {upcomingEvents.map(event => (
          <a href={`/events/${event.id}`} class="event-card">
            <h2 class="event-title">{event.title}</h2>
            <p class="event-date">{formatEventDate(event.dateTime)}</p>
            <p class="event-location">{event.location}</p>
            <div class="event-rsvp">
              <span class="rsvp-count rsvp-going">{event.rsvpCounts.going} going</span>
              <span class="rsvp-count rsvp-maybe">{event.rsvpCounts.maybe} maybe</span>
              <span class="rsvp-count rsvp-not-going">{event.rsvpCounts.notGoing} not going</span>
            </div>
          </a>
        ))}
      </div>
    )}

    {pastEvents.length > 0 && (
      <>
        <h1 class="page-title" style="margin-top: var(--space-12);">Past Events</h1>
        <div class="events-section">
          {pastEvents.map(event => (
            <a href={`/events/${event.id}`} class="event-card past-event">
              <h2 class="event-title">{event.title}</h2>
              <p class="event-date">{formatEventDate(event.dateTime)}</p>
              <p class="event-location">{event.location}</p>
              <div class="event-rsvp">
                <span class="rsvp-count rsvp-going">{event.rsvpCounts.going} going</span>
                <span class="rsvp-count rsvp-maybe">{event.rsvpCounts.maybe} maybe</span>
                <span class="rsvp-count rsvp-not-going">{event.rsvpCounts.notGoing} not going</span>
              </div>
            </a>
          ))}
        </div>
      </>
    )}
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-6);
  }

  .page-title {
    font-size: 2rem;
    margin-bottom: var(--space-6);
    color: var(--color-accent-dark);
  }

  .empty-state {
    background: var(--color-surface);
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-12);
    text-align: center;
    color: var(--color-text-muted);
  }

  .events-section {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .events-section {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .events-section {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .event-card {
    display: block;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
  }

  .event-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
    border-color: var(--color-accent);
  }

  .past-event {
    opacity: 0.7;
  }

  .event-title {
    font-size: 1.25rem;
    margin: 0 0 var(--space-3) 0;
    color: var(--color-accent-dark);
  }

  .event-date {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-2) 0;
  }

  .event-location {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-4) 0;
  }

  .event-rsvp {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .rsvp-count {
    font-size: 0.85rem;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-weight: 500;
  }

  .rsvp-going {
    background: #e8f5e9;
    color: var(--color-success);
  }

  .rsvp-maybe {
    background: #fff3e0;
    color: var(--color-warning);
  }

  .rsvp-not-going {
    background: #ffebee;
    color: var(--color-error);
  }

  @media (max-width: 640px) {
    .container {
      padding: var(--space-4);
    }

    .page-title {
      font-size: 1.5rem;
    }

    .event-title {
      font-size: 1.1rem;
    }
  }
</style>
