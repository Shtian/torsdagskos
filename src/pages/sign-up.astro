---
import Layout from '../layouts/Layout.astro';
import { SignUp as ClerkSignUp } from '@clerk/astro/components';
import { buttonVariants } from '@/components/ui/button';

// Redirect to home if already signed in
const { userId } = Astro.locals.auth();
if (userId) {
  return Astro.redirect('/');
}
---

<Layout
  title="Registrer deg - Torsdagskos"
  description="Opprett en invitert konto for å bli med i planleggingen på Torsdagskos."
>
  <section class="mx-auto mt-6 w-full max-w-3xl sm:mt-10" data-test-id="sign-up-shell">
    <div data-slot="card" class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm">
      <div data-slot="card-header" class="space-y-2 px-6 text-center">
        <p
          class="text-xs font-semibold uppercase tracking-[0.08em] text-muted-foreground"
          data-test-id="sign-up-kicker"
        >
          Bli med i Torsdagskos
        </p>
        <h1 class="m-0 text-3xl text-(--color-accent-dark) sm:text-4xl" data-test-id="sign-up-title">
          Opprett kontoen din
        </h1>
        <p class="mx-auto max-w-xl text-base text-muted-foreground" data-test-id="sign-up-description">
          Bruk invitasjonen din for å begynne å opprette arrangementer og svare sammen med gruppen.
        </p>
      </div>

      <div data-slot="card-content" class="space-y-6 px-6">
        <div class="flex justify-center" data-test-id="sign-up-form">
          <ClerkSignUp routing="path" path="/sign-up" signInUrl="/sign-in" />
        </div>
        <div class="flex justify-center">
          <a href="/sign-in" class:list={[buttonVariants({ variant: 'outline', size: 'lg' }), 'no-underline']}>
            Har du allerede en konto? Gå til innlogging
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
